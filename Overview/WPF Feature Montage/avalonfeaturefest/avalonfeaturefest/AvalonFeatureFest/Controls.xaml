                  <EventTrigger.Actions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation To="10" BeginTime="0:0:0" Duration="0:0:1" DecelerationRatio=".9" Storyboard.TargetName="Button" Storyboard.TargetProperty="(Canvas.Top)" />
