                        <DoubleAnimation To=".25" Duration="0:0:1" BeginTime="0:0:1" Storyboard.TargetName="Button" Storyboard.TargetProperty="Opacity" />
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger.Actions>
                </EventTrigger>
              </Button.Triggers>
            </Button>

