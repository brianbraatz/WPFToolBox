<Application x:Class="RD.Controls.ExpanderSample.MyApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:l="clr-namespace:RD.Controls.ExpanderSample" 
    StartupUri="Window1.xaml"
    >
    <Application.Resources>

			<Style x:Key="{x:Type l:MatrixTextBlock}" TargetType="{x:Type l:MatrixTextBlock}">
				<Setter Property="FontFamily" Value="OCR A Extended" />
				<Setter Property="Foreground" Value="#04AB4E" />
				<Setter Property="FontSize" Value="15" />
				<Setter Property="FontWeight" Value="Bold" />
			</Style>
			
    </Application.Resources>
</Application>
