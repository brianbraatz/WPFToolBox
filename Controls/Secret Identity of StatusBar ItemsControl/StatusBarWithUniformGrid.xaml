<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      WindowTitle="StatusBar with UniformGrid"
      Title="StatusBar with UniformGrid">
    <DockPanel>
        <!-- Dock StatusBar at bottom as usual. -->
        <StatusBar DockPanel.Dock="Bottom">

            <!-- Use a 3-column UniformGrid for the ItemsPanel. -->
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <!-- Put StatusBarItems in the UniformGrid. -->
            <StatusBarItem>Item # 1</StatusBarItem>
            <StatusBarItem>Item # 2</StatusBarItem>
            <StatusBarItem>Item # 3</StatusBarItem>
            <StatusBarItem>Item # 4</StatusBarItem>
            <StatusBarItem>Item # 5</StatusBarItem>
            <StatusBarItem>Item # 6</StatusBarItem>
            <StatusBarItem>Item # 7</StatusBarItem>
            <StatusBarItem>Item # 8</StatusBarItem>
            <StatusBarItem>Item # 9</StatusBarItem>
        </StatusBar>

        <!-- Just something to fill up the main DockPanel. -->
        <TextBox AcceptsReturn="True" />
    </DockPanel>
</Page>
