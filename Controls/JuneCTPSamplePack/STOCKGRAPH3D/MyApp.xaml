				<TextBlock  Width="50px" Height="20px" FontSize="14pt" Background="White" Foreground="Black" Text="{Binding Path=Title}" />
            </StackPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="LabelYItemStyle">
