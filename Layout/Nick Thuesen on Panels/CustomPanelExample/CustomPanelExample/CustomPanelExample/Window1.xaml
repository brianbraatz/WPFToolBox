<?Mapping XmlNamespace="controls" ClrNamespace="CustomPanelExample"?>
<Window x:Class="CustomPanelExample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/avalon/2005"
    xmlns:x="http://schemas.microsoft.com/winfx/xaml/2005"
	xmlns:cc="controls" 
    Title="CustomPanelExample"
    >

	<Grid>
		<!--Using Custom Panel-->
		<cc:CornerStacker x:Name="MyCS" VerticalAlignment="Top" HorizontalAlignment="Center">
				<Button>01</Button>
			</cc:CornerStacker>
		<StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
			<Button Height="75" Click="AddButton_clicked" Margin="5">Add Button</Button>
			<Button Height="75" Click="RemoveButton_clicked" Margin="5">Remove Button</Button>
			<Button Height="75" Click="IncreaseDim_clicked" Margin="5">Increase Dimensions By 10</Button>
			<Button Height="75" Click="DecreaseDim_clicked" Margin="5">Decrease Dimensions By 10</Button>
		</StackPanel>
	</Grid>
</Window>