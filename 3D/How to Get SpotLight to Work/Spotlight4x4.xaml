<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      WindowTitle="Spotlight 4 x 4"
      Title="Spotlight 4 x 4">
    <Viewport3D >
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <Model3DGroup>
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D
    Positions="-2,2,0 -1,2,0 0,2,0 1,2,0 2,2,0 -2,1,0 -1,1,0 0,1,0 1,1,0 2,1,0 -2,0,0 -1,0,0 0,0,0 1,0,0 2,0,0 -2,-1,0 -1,-1,0 0,-1,0 1,-1,0 2,-1,0 -2,-2,0 -1,-2,0 0,-2,0 1,-2,0 2,-2,0"
    TriangleIndices="0 5 1 1 5 6 1 6 2 2 6 7 2 7 3 3 7 8 3 8 4 4 8 9 5 10 6 6 10 11 6 11 7 7 11 12 7 12 8 8 12 13 8 13 9 9 13 14 10 15 11 11 15 16 11 16 12 12 16 17 12 17 13 13 17 18 13 18 14 14 18 19 15 20 16 16 20 21 16 21 17 17 21 22 17 22 18 18 22 23 18 23 19 19 23 24" />
                       </GeometryModel3D.Geometry>

                        <GeometryModel3D.Material>
                            <DiffuseMaterial Brush="Blue" />
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                    <SpotLight Position="0,0,6" Direction="0,0,-1"
                               InnerConeAngle="15" OuterConeAngle="30" 
                               Color="White" />
                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>

        <Viewport3D.Camera>
            <PerspectiveCamera Position="0 0 5" LookDirection="0 0 -1" 
                               FieldOfView="60" />
        </Viewport3D.Camera>
    </Viewport3D>
</Page>