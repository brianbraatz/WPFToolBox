<Window x:Class="WPFDashboard.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  MinWidth="700"
  MinHeight="700">
  <Grid Name="RootGrid">
    <Grid.Background>
      <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
        <LinearGradientBrush.GradientStops>
          <GradientStop Color="White" Offset="0" />
          <GradientStop Color="#F0F0F0" Offset=".7" />
          <GradientStop Color="#BBBBBB" Offset="1" />
        </LinearGradientBrush.GradientStops>
      </LinearGradientBrush>
    </Grid.Background>
    <DockPanel>
      <TextBlock 
        DockPanel.Dock="Top" 
        FontFamily="/fonts/#Pescadero" 
        FontSize="30pt"
        Margin="10,0,0,0">
        <Run Typography.StandardSwashes="1">F</Run>oobar Inc. Executive Dashboard
      </TextBlock>
      <DockPanel  
        DockPanel.Dock="Top" 
        LastChildFill="False">
        <Label 
          VerticalAlignment="Center">
          Time period:
        </Label>
        <ComboBox 
          VerticalAlignment="Center" 
          SelectedIndex="0">
          <ComboBoxItem>
            Today
          </ComboBoxItem>
          <ComboBoxItem>
            Yesterday
          </ComboBoxItem>
          <ComboBoxItem>
            Last week
          </ComboBoxItem>
          <ComboBoxItem>
            Last month
          </ComboBoxItem>
        </ComboBox>
        <Button 
          VerticalAlignment="Center" 
          Background="Transparent" 
          Margin="10,0,0,0">
          Add
        </Button>
        <Button 
          VerticalAlignment="Center" 
          Background="Transparent">
          Remove
        </Button>
        <DockPanel 
          DockPanel.Dock="Right" 
          Margin="12,0,0,0" 
          LastChildFill="False">
          <Label VerticalAlignment="Center">Search:</Label>
          <TextBox VerticalAlignment="Center" Width="120"/>
          <Button Background="Transparent" VerticalAlignment="Center">Search</Button>      
        </DockPanel>     
      </DockPanel>  
      <Grid 
        Name="DashboardGrid" 
        DockPanel.Dock="Left" 
        Margin="100,0,130,100">
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!-- SALES STATUS -->
        <Border 
          Grid.Row="0" 
          Grid.Column="0" 
          Grid.RowSpan="2" 
          Grid.ColumnSpan="2" 
          BorderBrush="DarkOrange" 
          BorderThickness="2"
          IsHitTestVisible="False"
          Margin="5,5,5,5">
          <TextBlock Foreground="DarkOrange" FontSize="14pt">Sales Status</TextBlock>
        </Border>        
          <DockPanel 
          Grid.Row="0" 
          Grid.Column="0" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Margin="10,30,10,10" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Sales by Region</TextBlock>
          <Viewbox>
            <Frame Source="widgets/SalesByRegion.xaml" />
          </Viewbox>
        </DockPanel>
        <DockPanel 
          Grid.Row="0" 
          Grid.Column="1" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Margin="10,30,10,10"  
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock 
            DockPanel.Dock="Top" 
            FontSize="10pt"
            TextWrapping="Wrap">
            Latest Sales Report
          </TextBlock>
          <Viewbox Name="SalesReportPreview">
            <Image Source="resources/SalesReportPreview.PNG" />
          </Viewbox>
        </DockPanel>
        <DockPanel 
          Grid.Row="1" 
          Grid.Column="0" 
          Margin="10,30,10,10" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Number of Sales</TextBlock>
          <Viewbox>
            <Frame Source="widgets/NumberofSales.xaml" />
          </Viewbox>
        </DockPanel>
        <DockPanel 
          Grid.Row="1" 
          Grid.Column="1"           
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Margin="10,30,10,10" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize"
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Sales Performance</TextBlock>
          <Viewbox>
            <Frame Source="widgets/SalesMeter.xaml" />
          </Viewbox>
        </DockPanel>
        <!-- /SALES STATUS -->

        <!-- FINANCE STATUS -->
        <Border 
          Grid.Row="0" 
          Grid.Column="2" 
          Grid.RowSpan="3" 
          Grid.ColumnSpan="1" 
          BorderBrush="Red" 
          BorderThickness="2"
          IsHitTestVisible="False"
          Margin="5,5,5,5">
          <TextBlock Foreground="Red" FontSize="14pt">Financial Status</TextBlock>
        </Border>
        <DockPanel 
          Grid.Row="0" 
          Grid.Column="2" 
          Margin="10,30,10,10" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Profit and Revenue</TextBlock>
          <Viewbox>
            <Frame Source="/widgets/ProfitandRevenue.xaml" />
          </Viewbox>
        </DockPanel>
        <DockPanel 
          Grid.Row="1" 
          Grid.Column="2" 
          Margin="10,30,10,10" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Finance Statement</TextBlock>
          <Viewbox Name="FinancialStatementPreview">
            <Image Source="resources/FinancialStatementPreview.PNG"/>
          </Viewbox>
        </DockPanel>
        <DockPanel 
          Grid.Row="2" 
          Grid.Column="2" 
          Margin="10,30,10,10" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Accounts</TextBlock>
          <Viewbox>
            <Frame Source="/widgets/AccountsReceivable.xaml" />
          </Viewbox>
        </DockPanel>
        <!-- /FINANCE STATUS -->

        <!-- MANUFACTURING STATUS -->
        <Border 
          Grid.Row="2" 
          Grid.Column="0" 
          Grid.RowSpan="1" 
          Grid.ColumnSpan="2" 
          BorderBrush="CornflowerBlue" 
          BorderThickness="2"
          IsHitTestVisible="False"
          Margin="5,5,5,5">
          <TextBlock Foreground="CornflowerBlue" FontSize="14pt">Manufacturing Status</TextBlock>
        </Border>       
        <DockPanel
          Name="VideoReport" 
          Grid.Row="2" 
          Grid.Column="0" 
          Margin="10,30,10,10" 
          Background="{StaticResource CellBrush}"
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="12pt" TextWrapping="Wrap">Video Report</TextBlock>
          <Viewbox>
            <Frame Source="widgets/VideoReport.xaml" />
          </Viewbox>
        </DockPanel>        
        <DockPanel 
          Grid.Row="2" 
          Grid.Column="1" 
          Margin="10,30,10,10" 
          MouseEnter="ScaleUp" 
          MouseLeave="ScaleDown" 
          Background="{StaticResource CellBrush}">
          <Button 
            DockPanel.Dock="Right" 
            Click="Maximize" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right" 
            Height="15" 
            Width="18" 
            Background="Transparent" />
          <TextBlock DockPanel.Dock="Top" FontSize="10pt" TextWrapping="Wrap">Worker Morale</TextBlock>
          <Viewbox>
            <Frame Source="widgets/MoraleMeter.xaml" />
          </Viewbox>
        </DockPanel>
        <!-- /MANUFACTURING STATUS -->                     
      </Grid>
    </DockPanel>
  </Grid>
</Window>
