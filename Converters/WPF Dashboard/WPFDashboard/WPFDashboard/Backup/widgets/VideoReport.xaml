<Page x:Class="WPFDashboard.widgets.VideoReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VideoReport"
    Loaded="PageLoaded">
  <Grid>
    <MediaElement Name="ManufacturingMediaElement" />
    <!--Source="resources/Bear.WMV"-->
    
    <DockPanel VerticalAlignment="Top" HorizontalAlignment="Left">
      <Button 
        Click="PlayVideo"
        Style="{StaticResource StylelessButtonStyle}"
        FontFamily="Webdings" 
        FontSize="16pt" 
        Foreground="White">
        <Path Fill='#FFFFFFFF' Data='F1 M 15,15L 0,30L 0,0L 15,15 Z '/>
      </Button>
      <Button 
        Click="PauseVideo" 
        Style="{StaticResource StylelessButtonStyle}"
        Foreground="White">
        <Path Fill='#FFFFFFFF' Data='F1 M 18,30L 12,30L 12,0L 18,0L 18,30 Z M 6,30L 0,30L 0,0L 6,0L 6,30 Z '/>
      </Button>
      <Button 
        Click="StopVideo"
        Style="{StaticResource StylelessButtonStyle}"
        FontFamily="Webdings" 
        FontSize="16pt" 
        Foreground="White">
        <Rectangle Width="30" Height="30" Fill='#FFFFFFFF' Margin="4,0,0,0"/>
      </Button>
    </DockPanel>
  </Grid>
</Page>
