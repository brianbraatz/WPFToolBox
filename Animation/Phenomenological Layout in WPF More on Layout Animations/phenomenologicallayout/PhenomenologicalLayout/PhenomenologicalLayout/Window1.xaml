<Window x:Class="PhenomenologicalLayout.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PhenomenologicalLayout" Height="300" Width="300"
    >
  <Grid HorizontalAlignment="Left">
    <StackPanel Name="hostStackPanel">
        <Image Source="/images/sunset.jpg" Height="100" Width="100" />
      <Viewbox Height="100" Width="100">
        <Viewbox.RenderTransform>
          <TranslateTransform X="0" Y="0"></TranslateTransform>
        </Viewbox.RenderTransform>
        <Image Source="/images/water lilies.jpg" Width="Auto" Height="Auto" />
      </Viewbox>
      <Viewbox Height="100" Width="100">
        <Viewbox.RenderTransform>
          <TranslateTransform X="0" Y="0"></TranslateTransform>
        </Viewbox.RenderTransform>
        <Image Source="/images/winter.jpg" Width="Auto" Height="Auto" />
      </Viewbox>
    </StackPanel>


  </Grid>
</Window>
