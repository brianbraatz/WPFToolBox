<Page x:Class="PhenomenologicalLayout.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Page2" Loaded="WindowLoaded" Background="Black"
    >
  <Viewbox MaxWidth="800" MaxHeight="600" HorizontalAlignment="Left"  VerticalAlignment="Top">
    <Canvas Name="hostPanel" Width="800" Height="600"> 
      <Image Source="/images/sunset.jpg" Width="100" Canvas.Top="300" Canvas.Left="200">
        <Image.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
            <TranslateTransform X="0" Y="0"></TranslateTransform>
          </TransformGroup>
        </Image.RenderTransform>
      </Image>
      <Image Source="/images/blue hills.jpg" Width="100" Canvas.Top="300" Canvas.Left="300">
        <Image.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
            <TranslateTransform X="0" Y="0"></TranslateTransform>
          </TransformGroup>
        </Image.RenderTransform>
      </Image>
      <Image Source="/images/water lilies.jpg" Width="100" Margin="0,0,0,0" Canvas.Top="300" Canvas.Left="400">
        <Image.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
            <TranslateTransform X="0" Y="0"></TranslateTransform>
          </TransformGroup>
        </Image.RenderTransform>
      </Image>
      <Image Source="/images/winter.jpg" Width="100" Margin="0,0,0,0" Canvas.Top="300" Canvas.Left="500">
        <Image.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
            <TranslateTransform X="0" Y="0"></TranslateTransform>
          </TransformGroup>
        </Image.RenderTransform>
      </Image>
    </Canvas>
  </Viewbox>
</Page>
