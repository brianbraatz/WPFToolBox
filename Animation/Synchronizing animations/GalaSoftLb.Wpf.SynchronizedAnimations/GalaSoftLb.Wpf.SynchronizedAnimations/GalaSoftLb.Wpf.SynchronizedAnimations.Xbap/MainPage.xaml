<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainPage"
    HorizontalAlignment="Center" Width="800" Height="284"
    >
	<Page.Background>
		<LinearGradientBrush EndPoint="0.869,0.886" StartPoint="0.131,0.114">
			<GradientStop Color="#FF000000" Offset="0"/>
			<GradientStop Color="#FF9C9C9C" Offset="1"/>
		</LinearGradientBrush>
	</Page.Background>
    <Grid>
        
    	<Grid.RowDefinitions>
    		<RowDefinition Height="64"/>
    		<RowDefinition Height="*"/>
    	</Grid.RowDefinitions>

        <StackPanel Margin="20,0,20,0" Grid.Row="1" Grid.RowSpan="1">
    		<TextBlock Margin="0,0,0,8" Width="Auto" Height="Auto" TextWrapping="Wrap">
    			<Run FontSize="24" Foreground="#FFE4E4E4">Not synchronized</Run>
    		</TextBlock>
    		<Frame Content="" Source="Page0.xaml" Width="Auto" Height="144"/>
    	</StackPanel>

    	<TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="24" Foreground="#FFFFFD00" Text="Single threaded animations" TextWrapping="Wrap"/>
    
    </Grid>
</Page>
