<Window x:Class="MTADependencyProperties.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="myWindow"
    Title="MTADependencyProperties" Height="300" Width="300"
    >
  <StackPanel>
    <Button Click="onClick" Content="{Binding ElementName=myWindow, Path=ButtonTitle}"/>
    <TextBlock Text="{Binding ElementName=myWindow, Path=MyText}"/>
  </StackPanel>
</Window>
