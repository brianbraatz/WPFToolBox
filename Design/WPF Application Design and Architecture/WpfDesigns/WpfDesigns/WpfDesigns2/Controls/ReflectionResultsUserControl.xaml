<UserControl x:Class="WpfDesigns2.Controls.ReflectionResultsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
      
      <!--Bind to the user control's ReflectionItems dependency property-->
      <ListBox Name="ResultsListBox" ItemsSource="{Binding Path=ReflectionResults}">
      </ListBox>
      
    </Grid>
</UserControl>
